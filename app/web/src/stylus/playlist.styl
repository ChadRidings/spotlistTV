.playlist,
.category {
    padding: 10px;
    height: 400px;
    width: 33.333333% !important;
    margin-left: 0;
    text-decoration: none;
    text-align: center;
}

#playlists {
    transition: all 400ms;
    opacity: 0;

    .playlist-item {
        position: relative;

        .playing {
            display: none;
            position: absolute;
            margin-left: auto;
            margin-top: 25%;
            color: #FFF;
            font-size: 6em;
            width: 100%;
            height: 100%;

            &.on {
                display: block;
                z-index: 1;

                img {
                    width: 100%;
                    transition: all 200ms;
                    -webkit-filter: blur(3px);
                }
            }
        }

        img {
            width: 100%;
            transition: all 200ms;

            &.blur {
                -webkit-filter: blur(3px);
            }

            &:hover {
                box-shadow: 0px 0px 15px 0px #545454;
            }
        }
    }
}
