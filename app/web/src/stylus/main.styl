@import 'normalize'
@import 'skeleton'

#js-app
font-size 20px

body {
    padding: 50px;
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;

    h1, h2, h3, h5 {
        text-align: center;
        font-family: "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
    }
}

a {
    color: #00B7FF;
}

.header {
    margin-top: 4rem;
    margin-bottom: 0;
    position: relative;

    h1 {
        color: #3F5386;
    }

    h1, h2, h3, h5 {
        font-family: "Raleway", "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    img {
        width: 80px;
        display: block;
        margin: 10px auto;
    }

    .logo {
        font-family: 'Coustard', serif;
        font-size: 3rem;
        color: #4C6ACA;

        a {
            color: #4C6ACA;
            text-decoration: none;
        }

        .tv {
            color: #444;
        }
    }

    .navigation .nav-item {
        margin: 0 10px;
        text-decoration: none;
    }

    .desc {
        font-size: 1.7rem;
    }

    .props {
        margin-top: 2.5em;
        margin-bottom: 3.5em;
        text-align: center;
    }

    .props i {
        color: #3F5386;
        display: block;
        font-size: 48px;
        margin-bottom: 30px;
    }
}

ul span {
    color: green;
}

section {
    margin-bottom: 3.5em;

    h1, h2, h3, h4, h5 {
        text-align: center;
    }
}

footer {
    margin: 15px 0;
    text-align: center;
}

h4 {
    margin-top: 15px;
}

.container {
    /*  max-width: 800px;
    */  margin-bottom: 10rem;
}

.js-playlist,
.category {
    padding: 10px;
    height: 400px;
    width: 33.333333% !important;
    margin-left: 0;
    text-decoration: none;
    text-align: center;
}

#playlists {
    transition: all 400ms;
    opacity: 0;

    img {
        width: 100%;
    }
}

#player {
    width: 100%;
    height: 600px;
    display: none;
}

.spinner {
    text-align: center;
}

.show {
    opacity: 1 !important;
}
